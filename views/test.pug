html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  head
    title= title
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" type="text/css")
    link(rel="stylesheet" href="/javascripts/highcharts/code/css/highcharts-dark-unica.css" type="text/css")
    link(rel="stylesheet" href="/stylesheets/style.css" type="text/css")
  body(style="font-size:0.8em;background-color: #333")
    h1(style="text-align: center;") CTT Sensor Station Overview
    div(class="row")
      div(class="col-lg-8")
        h2 Sensor Station Log
        div(style="overflow: scroll; height:400px;")
          table(class="table table-bordered table-sm table-dark" id="raw_log")
            tr(class="table-primary", style="color:#111") 
              th Time
              th Message
        div(class="row")
          div(class="col-sm")
            h2 Nodes
            div(style="overflow: scroll; height:400px;")
              table(class="table table-bordered table-sm table-dark" id="nodes")
                tr(class="table-primary", style="color:#111") 
                  th Node ID
                  th Last Heard
                  th RSSI
                  th Battery
                  th Firmware
          div(class="col-sm")
            h2 Tags
            div(style="overflow: scroll; height:400px;")
              table(class="table table-bordered table-sm table-dark" id="tags")
                tr(class="table-primary", style="color:#111") 
                  th Tag ID
                  th Count
                  th Alias
                  th 

            div(style="min-height:250px;", id="tag_hist")

      div(class="col-lg-4")
        h2 Station
        table(class="table table-bordered table-sm table-dark")
          tr
            th ID
            td
              span(id="station-id")
          tr
            th Compute Module Serial
            td
              span(id="serial")
          tr
            th Module Hardware
            td
              span(id="hardware")
          tr
            th Module Revision
            td
              span(id="revision")
          tr
            th Boot Count
            td
              span(id="bootcount")
          tr
            th Total Memory
            td
              span(id="memory")
          tr
            th Last Boot
            td
              span(id="uptime")
        div(class="row")
          div(class="col-sm")
            h3 Memory Usage
            div(id="mem-chart", style="min-height=75px;")
          div(class="col-sm")
            h3 CPU Usage
            div(id="cpu-chart", style="min-height=75px;")


        h2 GPS
        table(class="table table-bordered table-sm table-dark")
          tr
            th Time
            td
              span(id="time")
          tr
            th Number of Satellites
            td
              span(id="nsats")
          tr
            th Latitude
            td
              span(id="lat")
          tr
            th Longitude
            td
              span(id="lng")
          tr
            th Altitude
            td
              span(id="alt")

    div(class="row")
      div(class="col-lg")
        h2(style="text-align:center;") Radio 1
        div(style="overflow: scroll; height:400px;")
